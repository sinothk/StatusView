<resources xmlns:tools="http://schemas.android.com/tools">

    <!--全屏效果：通知栏中的文字可见,可潜入图片-->
    <style name="Theme_FullScreen" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here.这个有效必须activity继承FragmentActivity -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>

        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <!--全屏效果：通知栏中的文字可见,可潜入图片-->
    <style name="Theme_NoTitle_Notice" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here.这个有效必须activity继承FragmentActivity -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>

        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <!--标题中，通知栏指定颜色，没有阴影-->
    <style name="Theme_MyTitle_Notice" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>

        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@android:color/white</item>
        <item name="actionOverflowMenuStyle">@style/LYJMenuStyle</item>

        <!--Checkbox颜色-->
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>

        <!--EditView样式定义-->
        <item name="android:textColorHint">#A0A0A0</item>
        <item name="android:textCursorDrawable">@color/colorAccent</item>
        <!-- <item name="android:actionMenuTextAppearance">@style/MenuTextStyle</item>
         &lt;!&ndash;Activity进入退出动画&ndash;&gt;
         <item name="android:windowAnimationStyle">@style/ActivityInOut</item>-->
    </style>

    <!--控制PopWindow-->
    <style name="LYJMenuStyle" parent="@style/Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <item name="android:popupBackground">@color/colorPrimary</item>
    </style>

    <!--标题中，通知栏指定颜色，没有阴影-->
    <style name="Theme_MyTitle_Notice_BLACK" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>

        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@android:color/white</item>
        <item name="actionOverflowMenuStyle">@style/LYJMenuStyle</item>

        <!--Checkbox颜色-->
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>

        <!--EditView样式定义-->
        <item name="android:textColorHint">#A0A0A0</item>
        <item name="android:textCursorDrawable">@color/colorAccent</item>
        <!-- <item name="android:actionMenuTextAppearance">@style/MenuTextStyle</item>
         &lt;!&ndash;Activity进入退出动画&ndash;&gt;
         <item name="android:windowAnimationStyle">@style/ActivityInOut</item>-->
    </style>


</resources>
